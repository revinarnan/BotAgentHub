@model BotAgentHubApp.Models.SettingViewModels
@{
	ViewBag.Title = "Settings";
}

<h2>Settings</h2>

@using (Html.BeginForm("Save", "Setting", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "Please fix the following errors.", new { @class = "text-danger" })

		<div class="form-group">
			@Html.LabelFor(model => model.ChatbotConfiguration.UrlClient, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ChatbotConfiguration.UrlClient, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ChatbotConfiguration.UrlClient, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ChatbotConfiguration.UrlKb, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ChatbotConfiguration.UrlKb, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ChatbotConfiguration.UrlKb, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Simpan Perubahan" class="btn btn-primary" />
			</div>
		</div>
	</div>
}

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<div class="form-group">
			@Html.Label("Select User", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("UserName")
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Select Role", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("Name")
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Simpan Perubahan" class="btn btn-primary" />
			</div>
		</div>
	</div>
}


<h4>Daftar Pengguna</h4>

<table class="table">
	<tr>
		<th>
			@Html.DisplayName("User Name")
		</th>
		<th>
			@Html.DisplayName("Role")
		</th>
	</tr>

	@foreach (var item in Model.UserRole) 
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.UserName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RoleName)
			</td>
		</tr>
	}
	
	
</table>
