@model BotAgentHubApp.Models.SettingViewModels
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="rowz">
    <div class="columnz" style="margin-right: 2vw; height: 55vh">
        <h2>Pengaturan Website</h2>

        <div style="margin-left: 20px;">
            @using (Html.BeginForm("Save", "Setting", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
	                <div class="form-group">
                        @Html.LabelFor(model => model.ChatbotConfiguration.UrlClient, new { Style = "font-weight: normal" })
                        <div style="width: 95%">
                            @Html.EditorFor(model => model.ChatbotConfiguration.UrlClient, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ChatbotConfiguration.UrlKb, new { Style = "font-weight: normal" })
                        <div style="width: 95%">
                            @Html.EditorFor(model => model.ChatbotConfiguration.UrlKb, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            <input type="submit" value="Simpan Perubahan" class="btn" style="color: white" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="columnz" style="height: 55vh">
        <h2>Pengaturan Admin</h2>
       
        <div style="margin-left: 20px;">
            @using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.Label("Tambahkan Admin", new { Style = "font-weight: normal" })
                        <div>
                            @Html.DropDownList("UserName")
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Pilih Peran", new { Style = "font-weight: normal" })
                        <div>
                            @Html.DropDownList("Name")
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            <input type="submit" value="Simpan Perubahan" class="btn" style="color: white" />
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

<h2 style="margin-top: 2vw">Daftar Admin</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayName("User Name")
        </th>
        <th>
            @Html.DisplayName("Role")
        </th>
    </tr>

    @foreach (var item in Model.UserRole)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
        </tr>
    }


</table>
